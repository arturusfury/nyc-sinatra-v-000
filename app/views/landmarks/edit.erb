<div class="starter-template">
  <form method="post" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" name="_method" value="PATCH">

    <div class="form-group row">
      <h3>Enter an Landmark name</h3>
    </div>
    <div class="form-group row">
      <div class="col-xs-offset-4 col-xs-4">
        <input class="form-control" type="text" name="landmark[name]" placeholder="ex: St. Louis Arch" id="name" value="<%=@landmark.name%>">
      </div>
    </div>
    <div class="form-group row">
      <h3>Enter the year completed</h3>
    </div>
    <div class="form-group row">
      <div class="col-xs-offset-4 col-xs-4">
        <input class="form-control" type="number" name="landmark[year_completed]" placeholder="ex: 1965" value="<%=@landmark.year_completed%>" id="year_completed">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-offset-4 col-xs-4">
        <button type="submit" class="btn btn-primary btn-block">Edit Landmark</button>
      </div>
    </div>
  </form>
</div>
